<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="group.pals.android.lib.ui.filechooser.demo"
    android:installLocation="auto"
    android:versionCode="12"
    android:versionName="1.5 beta" >

    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:label="AFC 4.8b - Demo" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="group.pals.android.lib.ui.filechooser.FileChooserActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:theme="@style/AppTheme.Dialog" />

        <service android:name="group.pals.android.lib.ui.filechooser.services.LocalFileProvider" />
    </application>

</manifest>
