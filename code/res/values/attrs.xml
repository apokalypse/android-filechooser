<resources>

    <declare-styleable name="AfcSearchView">

        <!--
             Delay time to invoke a submission after the user entered a search query and waited for.
             Format in milliseconds.
        -->
        <attr name="delayTimeSubmission" format="integer" />

        <!-- Specifies if the view is iconfied or not. True is default. -->
        <attr name="iconified" format="boolean" />

        <!-- Specifies if this view is closable. True is default. -->
        <attr name="closable" format="boolean" />
        <attr name="enabled" format="boolean" />
        <attr name="hint" format="string" />
    </declare-styleable>

    <attr name="afc_ic_menu_bookmarks" format="reference" />
    <attr name="afc_ic_menu_home" format="reference" />
    <attr name="afc_ic_menu_gridview" format="reference" />
    <attr name="afc_ic_menu_listview" format="reference" />
    <attr name="afc_ic_menu_sort_by_date_asc" format="reference" />
    <attr name="afc_ic_menu_sort_by_date_desc" format="reference" />
    <attr name="afc_ic_menu_sort_by_name_asc" format="reference" />
    <attr name="afc_ic_menu_sort_by_name_desc" format="reference" />
    <attr name="afc_ic_menu_sort_by_size_asc" format="reference" />
    <attr name="afc_ic_menu_sort_by_size_desc" format="reference" />
    <attr name="afc_badge_file_provider_localfile" format="reference" />

</resources>