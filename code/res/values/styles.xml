<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="afc_button_navi_left">
        <item name="android:layout_width">@dimen/afc_button_navi_size</item>
        <item name="android:layout_height">@dimen/afc_button_navi_size</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">center</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:src">@drawable/afc_selector_button_navi_left</item>
        <item name="android:layout_marginLeft">@dimen/afc_dim_5dp</item>
        <item name="android:layout_marginTop">@dimen/afc_dim_10dp</item>
        <item name="android:layout_gravity">top</item>
    </style>

    <style name="afc_button_navi_right">
        <item name="android:layout_width">@dimen/afc_button_navi_size</item>
        <item name="android:layout_height">@dimen/afc_button_navi_size</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">center</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:src">@drawable/afc_selector_button_navi_right</item>
        <item name="android:layout_marginLeft">@dimen/afc_dim_5dp</item>
        <item name="android:layout_marginRight">@dimen/afc_dim_5dp</item>
        <item name="android:layout_marginTop">@dimen/afc_dim_10dp</item>
        <item name="android:layout_gravity">top</item>
    </style>

    <style name="afc_button_location">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:background">@drawable/afc_selector_button_location_dark</item>
        <item name="android:layout_margin">@dimen/afc_dim_5dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>